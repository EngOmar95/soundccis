<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.CS.sound_ccis.coop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/back_icon"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="@string/coop"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />
        <TextView
            android:id="@+id/edit"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/edit" />

        <TextView
            android:id="@+id/done"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/done" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/CS"
                    android:textColor="@color/green"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/id_coor_CS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/coordinater_CS"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/display_question"
                    android:inputType="text"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/coordinater_CS_Email"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/display_question"
                    android:enabled="false"
                    android:gravity="right"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/id_coor_CS2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/coordinater_CS_in"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/display_question"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/coordinater_CS_in_Email"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/display_question"
                    android:enabled="false"
                    android:gravity="right"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/IT"
                    android:textColor="@color/green"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/id_coor_IT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/coordinater_IT"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/display_question"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/coordinater_IT_Email"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/display_question"
                    android:enabled="false"
                    android:gravity="right"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/IS"
                    android:textColor="@color/green"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/id_coor_IS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/coordinater_IS"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/display_question"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/coordinater_IS_Email"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/display_question"
                    android:enabled="false"
                    android:gravity="right"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/id_coor_IS2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/coordinater_IS_2"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/display_question"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/coordinater_IS_2_Email"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/display_question"
                    android:enabled="false"
                    android:gravity="right"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

